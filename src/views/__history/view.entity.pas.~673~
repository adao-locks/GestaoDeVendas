  Vcl.Mask,
  Vcl.DBCtrls,
  Data.SqlExpr,
  Vcl.WinXPickers,
  Vcl.CheckLst,
  Vcl.ComCtrls, Service.Connection;

type
  TviewEntity = class(TviewBaseLists)
    lblPeopleID: TLabel;
    edtPeopleID: TDBEdit;
    lblName: TLabel;
    edtName: TDBEdit;
    lblBirth: TLabel;
    lblRegDate: TLabel;
    edtRegDate: TDBEdit;
    lblEmail: TLabel;
    edtEmail: TDBEdit;
    lblFantasy: TLabel;
    edtFantasy: TDBEdit;
    Label1: TLabel;
    DBEdit1: TDBEdit;
    Label2: TLabel;
    edtUpDate: TDBEdit;
